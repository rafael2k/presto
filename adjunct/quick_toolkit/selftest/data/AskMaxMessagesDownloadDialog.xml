<?xml version="1.0"?>

<define type="Dialog" name="AskMaxMessagesDownloadDialog">

  <Dialog>

    <Title string_ref="D_NEWS_MANY_NEW_MESSAGES_DETECTED"/>

    <StackLayout>
      
      <!-- Row 1 -->
      <Label wrap="true"/>
      
      <!-- Row 2 -->
      <StackLayout orientation="horizontal">
	
	<RadioButton id="Radio_limited_messages"/>

	<SpinBox id="NumberEdit_messages" kind="integer"/>

	<Label id="Label_messages" string_ref="D_NEWS_MESSAGES"/>
	
      </StackLayout>
      
      <!-- Row 3 -->
      <RadioButton id="Radio_all_messages" string_ref="D_NEWS_ALL_MESSAGES"/>
      
      <!-- Row 4 -->
      <Checkbox id="Dont_ask_checkbox" string_ref="D_NEWS_DONT_ASK_NEW_MESSAGES_AGAIN"/>
      
    </StackLayout>

    <ButtonStrip ref="OkCancel"/>

  </Dialog>

</define>
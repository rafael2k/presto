<?xml version="1.0"?>

<define type="Dialog" name="ContactPropertiesDialog">

  <Dialog help_anchor="panels.html#contacts">

    <Title string_ref="D_PROPERTIES_DIALOG_CAPTION"/>

    <TabLayout>
      
      <Tab>
	<Title string_ref="DI_CL_EDITITEM_TAB_NET"/>
	
	<GridLayout>
	  <GridRow>
	    <GridItem colspan="all">
	      <WebPage id="Picture_image"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Name_edit" string_ref="D_CONTACT_PROP_NAME"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="Name_edit"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Email_edit" string_ref="DI_IDSTR_M2_NEWACC_WIZ_EMAILADDRESS"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="Email_edit"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Homepage_edit" string_ref="DI_ID_CL_PROP_HOMEPAGE_LABEL"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="Homepage_edit"/>
	    </GridItem>
	  </GridRow>
	</GridLayout>
      </Tab>
      
      <Tab>
	<Title string_ref="DI_CL_EDITITEM_TAB_INFO"/>
	
	<GridLayout>
	  <GridRow>
	    <GridItem colspan="all">
	      <Label id="label_for_Address_edit" string_ref="DI_ID_CL_PROP_POSTADDR_LABEL"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem colspan="all">
	      <MultilineEdit id="Address_edit"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Phone_edit" string_ref="DI_ID_CL_PROP_PHONE_LABEL"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="Phone_edit"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Fax_edit" string_ref="DI_ID_CL_PROP_FAX_LABEL"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="Fax_edit"/>
	    </GridItem>
	  </GridRow>
	</GridLayout>
      </Tab>
      
      <Tab>
	<Title string_ref="DI_CL_EDITITEM_TAB_NOTES"/>
	
	<StackLayout>

	  <Label id="label_for_Otheremail_edit" string_ref="D_CONTACT_PROP_ADD_EMAIL"/>

	  <Edit id="Otheremail_edit"/>

	  <Label id="label_for_Notes_edit" string_ref="DI_ID_CL_PROP_NOTES_LABEL"/>

	  <MultilineEdit id="Notes_edit"/>

	</StackLayout>
      </Tab>
      
      <Tab>
	<Title string_ref="DI_IDSTR_M2_HOTLISTTAB_CHAT"/>
	
	<StackLayout>

	  <Label id="label_for_Nicknames_edit" string_ref="D_CONTACT_PROPERTIES_NICKNAMES"/>

	  <Edit id="Nicknames_edit"/>

	</StackLayout>
      </Tab>
      
      <Tab>
	<Title string_ref="D_CONTACT_PROPERTIES_IMAGES"/>
	
	<GridLayout>
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_PictureURL_edit" string_ref="D_CONTACT_PROP_PICTURE_URL"/>
	    </GridItem>
	    
	    <GridItem>
	      <Edit id="PictureURL_edit"/>
	    </GridItem>
	  </GridRow>
	  
	  <GridRow>
	    <GridItem>
	      <Label id="label_for_Icon_listbox" string_ref="D_CONTACT_PROP_ICON"/>
	    </GridItem>
	    
	    <GridItem>
	      <Treeview id="Icon_listbox"/>
	    </GridItem>
	  </GridRow>
	</GridLayout>
      </Tab>
      
    </TabLayout>

    <ButtonStrip ref="OkCancelHelp"/>

  </Dialog>

</define>
<?xml version="1.0" encoding="ISO-8859-1"?>
<xml><!-- Opera Packaging Manifest File.  See ubs/common/Locate.pm -->
  <opfolder id="RESOURCES">
    <source path="VS_Output/[CONFIGURATION]">
      <file name="opera.dll" />
      <file name="opera.exe" />
    </source>
    <target type="i386">
      <source path="adjunct/resources/extra/x86">
        <file name="D3DCompiler_43.dll" />
      </source>
    </target>
    <target type="x64">
      <source path="adjunct/resources/extra/x64">
        <file name="D3DCompiler_43.dll" />
      </source>
    </target>
  </opfolder>
  <opfolder id="PLUGINWRAPPER">
    <target type="x64">
      <source path="VS_Output/[CONFIGURATION]">
        <file name="opera_plugin_wrapper.exe" />
        <file name="opera_plugin_wrapper_32.exe" optional="true" />
      </source>
    </target>
  </opfolder>

  <opfolder id="MAPI">
    <source path="VS_Output/[CONFIGURATION]">
      <file name="OperaMAPI.dll" />
      <file name="OperaMAPI_32.dll" optional="true"/>
    </source>
  </opfolder>
  <opfolder id="UPDATECHECKER">
    <source path="VS_Output/[CONFIGURATION]">
      <file name="opera_autoupdate.exe" />
    </source>
    <source path="adjunct/autoupdate/autoupdate_checker/licenses">
      <file name="LICENSES" />
    </source>
  </opfolder>
  <opfolder id="PROGRAM"><!-- The program folder -->
    <source path="platforms/windows/packaging/resources">
      <file from="plugins_readme.txt" name="plugins/readme.txt" />
    </source>
  </opfolder>
</xml>

// tutorial21.ot
group "tutorial_21";

include "stdio.h";

table otfiles(char *) filelist "." name "*.ot";

test ("Check if all ot-files starts with //")
{
  iterate( filename ) from otfiles
  {
    FILE* f = fopen(filename, "r");
	verify(f != NULL);
	char buf[2];
    fread(buf, 1, 2, f);
	output("%s\n", filename);
	verify(op_strncmp("//", buf, 2) == 0);
    fclose(f);
  }
}
